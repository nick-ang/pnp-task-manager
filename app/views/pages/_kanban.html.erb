<div class="col-9">
      <div class="container-fluid">
        <div class="row">
          <!-- Not Started Task -->
          <div class="col">
            <div class="d-flex align-items-center border-bottom border-dark mb-3">
              <i class="bi bi-square" style="font-size: 1.5rem;"></i>
              <h4 class="mb-0 ml-2">Not Started</h4>
            </div>
            <div class="card border border-secondary bg-white text-center rounded-lg">
              <div class="card-body p-0 py-1">
                <i class="bi bi-plus" style="font-size: 1.75rem;"></i>
                <h5 class="card-title mb-0 mt-n2"><%= link_to "Add New Task", new_project_task_path(1), class: "nav-link stretched-link pt-0" %></h5>
              </div>
            </div>
          </div>
          <!-- Started Task -->
          <div class="col">
            <div class="d-flex align-items-center border-bottom border-dark mb-3">
              <i class="bi bi-check2-square" style="font-size: 1.5rem;"></i>
              <h4 class="mb-0 ml-2">Started</h4>
            </div>
          </div>
          <!-- Completed Task -->
          <div class="col">
            <div class="d-flex align-items-center border-bottom border-dark mb-3">
              <i class="bi bi-check2-square" style="font-size: 1.5rem; color: #db8f5b;"></i>
              <h4 class="mb-0 ml-2">Completed</h4>
            </div>
          </div>
        </div>
      </div>
    </div>
