 <%# Checks if user is signed in %>
<% if user_signed_in? %>
  <div class="container-fluid d-flex mt-3">
    <div class="sidebar col-3">
      <h4>Projects</h4>
      <%= render "shared/projects_sidebar", project: @projects %>
      <%# <%= render "kanban", project: @project %>
    </div>
    <div class = "dashboard container">
      <div class = "tasks d-flex card">
        <%= pie_chart Task.group(:status).count %>
        <%= bar_chart Project.group(:name).sum(:progress) %>
      </div>
      <div class = "deadlines card-content">
        <% @projects.each do |project|%>
          <li>
            <%= project.name %>
            <% if project.end_date %>
              <%= project.end_date.strftime("%d %B")%>
            <% end %>
            <% if project.start_date %>
              <%= project.start_date.strftime("%d %B")%>
            <% end %>
            <li>
            <% end %>
          </div>
          <div class = "members card-content">
            <% @projects.each do |project|%>
              <li>
                <%= project.name %>
                <% "No. of members: #{array_project = project.users.each} " %>
                <% array_project.map do |id|
                     id.first_name
                   end %>
                <% "Project Team Members: " %>
                <% array_project.each do |user| %>
                  <% "#{user.first_name}  |  " %>
                <% end %>
                <%= "No. of members #{array_project.size}" %>
                <li>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
