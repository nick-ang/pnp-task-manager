<div class="container-fluid pnp_bg_login">
  <div class="row d-flex justify-content-center align-items-center vh-100">
    <div class="col-md-8 bg-white shadow">
      <div class="row">
        <div class="col-md-3 pnp_bg_blue pr-0">
          <div class="d-flex flex-column align-items-center h-100">
            <div class="my-auto ml-auto pnp_login_register_page">
              <%= link_to "Log In", new_session_path(resource_name), class: "btn btn-block text-white text-right" %>

              <%= link_to "Forgot Password?", new_password_path(resource_name), class: "btn btn-block text-white text-right" %>
            </div>
          </div>
        </div>

        <div class="col-md-9 py-5">
          <p class="pnp_logo_blue pnp_logo_blue_120px mx-auto"></p>

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <input type="hidden" name="user[position]" id="user_position" value="Employee">

            <div class="form-group row mt-4">
              <label for="user_first_name" class="col-sm-3 col-form-label">First Name*</label>

              <div class="col-sm-9 my-auto">
                <%= f.input :first_name,
                            required: true,
                            autofocus: true,
                            label: false,
                            placeholder: "First Name",
                            wrapper_html: { class: "mb-0" },
                            input_html: { autocomplete: "first-name" } %>
              </div>
            </div>

            <div class="form-group row mt-4">
              <label for="user_last_name" class="col-sm-3 col-form-label">Last Name*</label>

              <div class="col-sm-9 my-auto">
                <%= f.input :last_name,
                            required: true,
                            label: false,
                            placeholder: "Last Name",
                            wrapper_html: { class: "mb-0" },
                            input_html: { autocomplete: "last-name" } %>
              </div>
            </div>

            <div class="form-group row mt-4">
              <label for="user_email" class="col-sm-3 col-form-label">Email Address*</label>

              <div class="col-sm-9 my-auto">
                <%= f.input :email,
                            required: true,
                            label: false,
                            placeholder: "Email Address",
                            wrapper_html: { class: "mb-0" },
                            input_html: { autocomplete: "email" } %>
              </div>
            </div>

            <div class="form-group row mt-4">
              <label for="user_phone" class="col-sm-3 col-form-label">Phone</label>

              <div class="col-sm-9 my-auto">
                <%= f.input :phone,
                            required: false,
                            label: false,
                            placeholder: "Phone",
                            wrapper_html: { class: "mb-0" } %>
              </div>
            </div>

            <div class="form-group row mt-4">
              <label for="user_gender" class="col-sm-3 col-form-label">Gender</label>

              <div class="col-sm-9 my-auto">
                <div class="form-group select optional user_gender mb-0">
                  <select class="form-control select optional" name="user[gender]" id="user_gender">
                    <option value="" label=" "></option>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                  </select>

                  <small class="form-text text-muted">Please select your gender</small>
                </div>
              </div>
            </div>

            <div class="form-group row mt-4">
              <label for="user_password" class="col-sm-3 col-form-label">Password*</label>

              <div class="col-sm-9 my-auto">
                <%= f.input :password,
                            required: true,
                            label: false,
                            placeholder: "Password",
                            hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                            wrapper_html: { class: "mb-0" },
                            input_html: { autocomplete: "new-password" } %>
              </div>
            </div>

            <div class="form-group row mt-4">
              <label for="user_password_confirmation" class="col-sm-3 col-form-label">Confirm Password*</label>

              <div class="col-sm-9 my-auto">
                <%= f.input :password_confirmation,
                            required: true,
                            label: false,
                            placeholder: "Confirm Password",
                            wrapper_html: { class: "mb-0" },
                            input_html: { autocomplete: "new-password" } %>
              </div>
            </div>

            <div class="form-actions text-center mt-4">
              <%= f.button :submit, "Sign Up", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
document.getElementById("pnp_navbar").style.setProperty('display', 'none', 'important');
document.getElementById("pnp_navbar_responsive").style.setProperty('display', 'none', 'important');
</script>
