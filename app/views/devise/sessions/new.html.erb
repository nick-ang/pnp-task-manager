<div class="container-fluid pnp_bg_login">
  <div class="row d-flex justify-content-center align-items-center vh-100">
    <div class="col-md-8 bg-white shadow">
      <div class="row">
        <div class="col-md-3 pnp_bg_blue pr-0">
          <div class="d-flex flex-column align-items-center h-100">
            <div class="my-auto ml-auto pnp_login_register_page">
              <%= link_to "Log In", new_session_path(resource_name), class: "btn btn-block bg-white pnp_login_button_radius text-right" %>

              <%= link_to "Forgot Password?", new_password_path(resource_name), class: "btn btn-block text-white text-right" %>
            </div>
          </div>
        </div>

        <div class="col-md-9 py-5 text-center">
          <p class="pnp_logo_blue pnp_logo_blue_120px mx-auto"></p>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="input-group input-group-lg mx-auto mt-4">
              <div class="input-group-prepend">
                <span class="input-group-text border-top-0 border-left-0 border-right-0 bg-transparent">
                  <i class="bi bi-person-fill" style="size: 1rem;"></i>
                </span>
              </div>

              <%= f.input :email,
                          required: true,
                          autofocus: true,
                          label: false,
                          placeholder: "Username",
                          wrapper_html: { class: "mb-0" },
                          input_html: { value: @demo.email } %>
            </div>

            <div class="input-group input-group-lg mx-auto mt-4">
              <div class="input-group-prepend">
                <span class="input-group-text border-top-0 border-left-0 border-right-0 bg-transparent">
                  <i class="bi bi-lock-fill" style="size: 1rem;"></i>
                </span>
              </div>

              <%= f.input :password,
                          class: "mb-0",
                          required: true,
                          label: false,
                          placeholder: "Password",
                          wrapper_html: { class: "mb-0" },
                          input_html: { value: @demo.nickname } %>
            </div>

            <div class="form-group mt-4">
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions text-center mt-4">
              <%= f.button :submit, "Login", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
document.getElementById("pnp_navbar").style.setProperty('display', 'none', 'important');
document.getElementById("pnp_navbar_responsive").style.setProperty('display', 'none', 'important');
</script>
