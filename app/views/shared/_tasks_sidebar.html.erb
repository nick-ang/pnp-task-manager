<nav class="nav flex-column">
  <!-- Get Projects -->
  <% @projects.each do |project| %>
    <% if project.user_ids.include?(current_user.id) || current_user.id == project.created_by || current_user.admin %>
      <div class="card border border-secondary bg-white text-center rounded-lg mb-3">
        <div class="card-body p-0 py-1">
          <%= link_to "#{project.name}", project_path(project) %>
        </div>
      </div>
    <% end %>
  <% end %>
   <% if current_user.position != "employee" %>
      <div class="card border border-secondary bg-white text-center rounded-lg">
        <div class="card-body p-0 py-1">
          <i class="bi bi-plus" style="font-size: 1.75rem;"></i>
          <h5 class="card-title mb-0 mt-n2">
            <a class="btn text-primary nav-link stretched-link pt-0" data-toggle="modal" data-target="#newProject">Create New Project</a>
          </h5>
        </div>
      </div>
    <% end %>

</nav>
