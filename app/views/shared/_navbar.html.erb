<div class="navbar navbar-expand-sm navbar-light navbar">
  <% if user_signed_in? %>
    <%= link_to "#", class: "navbar-brand" do %>
      <a  href="<%= root_path %>">P&NP | HOME</a>
      <a  href="<%= wikis_path %>">Wikis</a>
      <a  href="<%= chatrooms_path %>">Chatrooms</a>
      <a  href="<%= notes_path %>">Sticky Notes</a>
      <% if current_user.admin %>
        <a  href="<%= rails_admin_path %>">Admin Dashboard</a>
      <% end %>
    <% end %>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <p id="screen-name">Hi, <%= current_user.first_name.capitalize %> | <%= current_user.position %> | <%= "Employee ID: #{current_user.id}" %>
          <li class="nav-item dropdown">
            <%= image_tag "https://source.unsplash.com/random", class: "avatar dropdown-toggle rounded-circle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Another action", "#", class: "dropdown-item" %>
              <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
